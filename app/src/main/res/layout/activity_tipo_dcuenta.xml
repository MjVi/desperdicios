<?xml version="1.0" encoding="utf-8"?>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        layout_height="match_parent"
        layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/editTextColorWhite"
        tools:context=".TipoDCuenta">

        <include layout="@layout/actionbar_toolbar"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/EditTextMarginCA"
                android:layout_marginTop="@dimen/EditTextMarginTipo"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginTop="15dp">
                    <Button
                        android:id="@+id/cr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="32dp"
                        android:text="Recibir"
                        android:theme="@style/RaisedButtonDark"
                        android:onClick="goRecibir"/>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/cd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="32dp"
                        android:text="Dar"
                        android:theme="@style/RaisedButtonDark"
                        android:onClick="goDar"/>

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>